{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "dyn_reg_client_POST",
    "description": "Dynamic Client Meta Data",
    "type": "object",
    "properties": {
        "client_name": {
            "type": "string",
            "maxLength": 60,
            "required": true
        },
        "client_description": {
            "type": "string",
            "maxLength": 4000,
            "required": false
        },
        "client_url": {
            "type": "string",
            "required": false
        },
        "redirect_url": {
            "type": "string",
            "required": true
        }
    }
}